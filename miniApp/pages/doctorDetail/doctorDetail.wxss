/* pages/doctorDetail/doctorDetail.wxss */
.doctor-page{
  background: #f1f1f1;
}
.doctor-info{
  display: flex;
  display: -webkit-flex;
  padding: 15px;
  color: #fff;
  background: #2ba246;
}
.doctor-photo{
  flex: 0 0 auto;
}
.doctor-photo image{
  width: 100rpx;
  height: 100rpx;
  border-radius:80rpx; 
  -webkit-border-radius:80rpx; 
  -moz-border-radius:80rpx; 
}
.doctor-content{
  flex: 1 1 auto;
  padding-left: 15px;
  font-size: 15px;
}
.doctor-content view{
  margin-top: 5px;
}
.job-title{
  font-size: 12px;
}
.border-tip{
  margin-right: 5px;
  padding: 0 5px;
  font-size: 12px;
  border: 1px dotted #fff;
  border-radius:12px; 
  -webkit-border-radius:12px; 
  -moz-border-radius:12px; 
}
.icon-btn{
  width: 16px;
  height: 14px;
  vertical-align:middle;
}
.doctor-item{
  padding: 15px;
  background: #fff;
  
}
.doctor-item-title{
  font-size: 14px;
}
.doctor-item-info{
  margin-top: 10px;
  padding-left: 15px;
  padding-bottom: 15px;
  font-size: 12px;
  color: #818181;
  border-bottom: 1px solid #f1f1f1;
}
.item-info{
  margin-bottom: 5px;
}
.card-content{
  margin-top: 10px;
}
.card-info{
  width: 200rpx;
  height: 100rpx;
  vertical-align: middle;
  background: #888;
}
.icon-tip{
  width: 25rpx;
  height: 100rpx;
}