    display: block;
    margin: 0 auto;
    width: 80rpx;
    height: 32rpx;
}

.list-info-item0 {
    flex: 0 0 auto;
    vertical-align: middle;
    position:relative;
    top:-7px;
}

.list-info-item {
    flex: 1 1 auto;
    font-size: 30rpx;
    vertical-align: middle;
    padding: 0 5px;
}

.item-tilte {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    margin-top: 5px;
    padding-right: 10px;
    height: 30px;
}

.list-info-text {
    padding-right: 0 !important;
}
