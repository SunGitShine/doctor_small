    padding-right:10px !important;
}
.date-tip {
    position: relative;
    top: -20px;
    right:-20px;
    font-size: 14px;
    color: #ff7800;
    display: block;
}

.item-tip {
    text-align: right;
    font-size: 14px;
    color: #ff7800;
}

.item-c-hospital-line {
    padding: 0 5px;
}

.item-content-hospital-box {
    display: flex;
    align-items: center;
