    vertical-align: middle;
}

.list-info-route {
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    padding: 10rpx;
    border-bottom: 1px solid #f1f1f1;
}

.user-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

