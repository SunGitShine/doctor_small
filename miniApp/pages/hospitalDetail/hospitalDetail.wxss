/* pages/hospitalDetail/hospitalDetail.wxss */
hospital-detail{
  
}
.hospital-logo{
  height: 160rpx;
  background: #2ba246;
}
.hospital-logo image{
  display: block;
  margin: 0 auto;
  padding: 10px 0;
  width: 80rpx;
  height: 80rpx;
}
.info-title{
  position: relative;
  padding: 10px;
  font-size: 15px;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
}
.info-title image{
  width: 16px;
  height: 14px;
}
.modify-icon{
  position: absolute;
  right: 10px;
}
.hospital-detail-info{
  padding-left: 15px;
  padding-top: 15px;
  padding-right: 15px;
  padding-bottom:48px;  
  background: #f1f1f1;
}
.index-info{
  margin-top: 10px;  
  border-radius:5px;
  -webkit-border-radius:5px;
  -moz-border-radius:5px; 
}
.index-info:first-child{
  margin-top: 0;
}
.info-index-content{
  padding: 10px;
  background: #fff;
  font-size: 12px;
  color: #808080;
}
.info-index-content>image{
  width: 100%;
}
.info-content-item{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  font-size: 12px;
  color: #808080;

}
.item-title{
  flex:  0 0 auto;
}
.item-input{
  flex:  0 0 auto;
}
.image-item{
  position: relative;
  float: left;
  padding: 10px;
  box-sizing: border-box;
  width: 33.33%;
  height: 100rpx;
}
.image-item-info{
  height: 100%;
  background: #f1f1f1;
}
.remove-icon{
  position: absolute;
  top: 0;
  right: 0;
  width: 16px;
  height: 14px;
}
.update-btn{
  position: fixed;
  bottom: 0;
  padding: 10px;
  width: 100%;
  text-align: center;
  font-size: 15px;
  color: #fff;
  background: #2ba246;
}
.certificate-picture {
    width: 150px !important;
    height: 100px !important;
}
.hospital-img-box>image{
  width: 100%;
}
.tag-text{
  padding-right: 10px;
}