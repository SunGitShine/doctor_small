/*圆点数字标注*/

page {
    height: 100%;
}

.list-page {
    height: 100%;
    overflow: hidden;
}

.notice {
    width: 28rpx;
    height: 28rpx;
    color: #fff;
    text-align: center;
    background-color: #ec9e14;
    border-radius: 50%;
    position: absolute;
    float: left;
    /* margin-top: 8rpx;*/
    top: 5rpx;
    font-size: 17rpx;
    right: 30rpx;
    line-height: 30rpx;
}

/*顶部导航样式*/

.navbar {
    /* position: fixed; */
    width: 100%;
    flex: none;
    display: flex;
    background: #f1f1f1;
    z-index: 50;
    padding-bottom: 15px;
}

.navbar .item {
    position: relative;
    flex: auto;
    padding: 5px;
    text-align: center;
    line-height: 60rpx;
    font-size: 14px;
    color: #666;
    background: #fff;
    font-family: Microsoft YaHei;
}

.navbar .item.active {
    color: #2ba246;
    font-size: 14px;
    font-family: Microsoft YaHei;
}

