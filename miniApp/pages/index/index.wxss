/**index.wxss**/
.page-wrapper{
  background: #f1f1f1;
}
.swiper-contain{
  width: 100%;
}
swiper{
  height: 300rpx;
}
image{
  width: 100%;
  height: 300rpx;
}
.list-title{
  position: relative;
  padding:18rpx 10rpx;
  font-size: 30rpx;
  background: #fff;
  text-align: center;
}
.list-title image{
  width: 35%;
  height: 30rpx;
}
.list-wrapper{
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  flex-direction: row;
  height: 200rpx;
  color: #303030;
  background: #fff;
}
.list-item-hot{
  flex: 1 1 auto;
  padding: 10px;
  text-align: center;
  font-size: 13px;
  border: 1px solid #f1f1f1;
}
.list-item-hot:first-child{
  border-right: none;
}
.list-item-hot image{
  display: block;
  margin: 0 auto 10px auto;
  width: 80rpx;
  height: 80rpx;
}
.list-item{
  flex: 1 1 auto;
  text-align: center;
  font-size: 13px;
}
.list-item image{
  display: block;
  margin: 0 auto 10px auto;
  width: 80rpx;
  height: 60rpx;
}
.list-col{
  background: #fff;
}
.list-col-item{
  position: relative;
  padding: 10px;
  font-size: 15px;
  border-bottom: 1px solid #f1f1f1;
}
.list-col-item:last-child{
  border-bottom: none;
}
.list-col-item div{
  display: block;
}
.user-demander{
  margin-top: 5px;
  font-size: 12px;
  color: #818181;
}
.user-demander text{
  padding-right:10px;
}
.user-logo{
  margin-top: 10px;
}
.user-logo image{
  width: 40rpx;
  height: 40rpx;
}
.salaries{
  position: absolute;
  top: 15px;
  right: 10px;
  color: #ff7800;
}
.route-tip{
  position: absolute;
  right: 10px;
  top: 5px;
  color: #2ba246;
}