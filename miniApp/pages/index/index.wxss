/**index.wxss**/
.page-wrapper{
  background: #f1f1f1;
}
.swiper-contain{
  width: 100%;
}
.img-swiper{
  height: 300rpx;
}
.icon-swiper{
  height: 240rpx;
}
image{
  width: 100%;
  height: 300rpx;
}
.list-title{
  position: relative;
  padding:18rpx 10rpx;
  font-size: 30rpx;
  background: #fff;
  text-align: center;
}
.list-title>navigator{
    display: flex;
    align-items: center;
    justify-content: center;
}
.list-title image{
  width: 120px;
  height: 15px;
}
.icon-wrapper{
  margin-bottom: 10px;
}
.list-wrapper{
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  flex-direction: row;
  height: 200rpx;
  color: #303030;
  background: #fff;
}
.list-item-hot{
  position: relative;
  flex: 1 1 auto;
  padding: 10px;
  text-align: center;
  font-size: 13px;
}

.list-item-hot:first-child{
  border-right: none;
}
.index-icon{
  display: block;
  margin: 0 auto 10px auto;
  width: 80rpx;
  height: 80rpx;
}
.hot-icon{
  position: absolute;
  width: 82rpx;
  height: 67rpx;
  top:0;
  right: 0;
}
.list-item{
  flex: 1 1 auto;
  text-align: center;
  font-size: 13px;
}
.list-item image{
  display: block;
  margin: 0 auto 10px auto;
  width: 80rpx;
  height: 60rpx;
}
.list-col{
  background: #fff;
  min-height: 100px;
}
.list-col-item{
  position: relative;
  padding: 10px;
  font-size: 15px;
  border-bottom: 1px solid #f1f1f1;
}
.list-col-item:last-child{
  border-bottom: none;
}
.list-col-item div{
  display: block;
}
.user-demander{
  margin-top: 5px;
  font-size: 12px;
  color: #818181;
}
.user-demander text{
  padding-right:10px;
}
.user-logo{
  display: flex;
  display: -webkit-flex;
  align-items: center;  
  -webkit-align-items: center;  
  margin-top: 10px;
}
.logo-icon{
  flex: 0 0 auto;
  -webkit-flex:0 0 auto;
  width: 40rpx;
  height: 40rpx;
}
.logo-text{
  padding-left: 5px;
  flex: 1 1 auto;
  -webkit-flex:1 1 auto;
  font-size: 24rpx;
}
.salaries{
  position: absolute;
  top: 15px;
  right: 10px;
  color: #ff7800;
}
.route-tip{
  position: absolute;
  right: 10px;
  top: 5px;
  color: #2ba246;
  font-size: 15px;
}