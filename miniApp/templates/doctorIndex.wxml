<template name="doctorIndex">
    <view class="doctor-info">
        <view bindtap='goToDoctorInfo'>
            <view class="doctor-info-title">
                <image src="../../images/index_icon.png" /> 
                <view>基本信息</view>
            </view>
            <view class="doctor-info-index">
                <view>姓　　名：{{name}}</view>
                <view>出生年月：{{birthday}}</view>
                <view>联系电话：{{phone}}</view>
            </view>
        </view>
    </view>
    <view class="doctor-info">
        <view class="doctor-info-title">
            <image src="../../images/index_icon.png" />
            <view>我的发布</view>
        </view>
        <view class="doctor-publish-index">
            <view class="section">
                <view class='sitting-time-list-box' wx-if="{{sittingTimeShow}}">
                    <view class='sitting-time'>{{sittingStartTime}}~{{sittingEndTime}}</view>
                    <view class='sitting-time-operation'>
                        <switch class='sitting-switch-btn' checked='{{sittingSwitch}}' bindchange="switchChange" />
                        <image class="sitting-remove-icon" src="../../images/remove.png"  bindtap='deleteSittingTime'/>
                    </view>
                </view>
                <picker mode="date" value="{{date}}" bindchange="bindDateChange">
                    <view class="picker add-picker-box">
                        <view class='add-img-box'>
                            <image src='../../images/add.png'></image>
                        </view>
                        <view class='text'>添加发布</view>
                    </view>
                </picker>
            </view>
        </view>
    </view>
    <view class="doctor-info">
        <navigator hover-class="none" url="/pages/doctorRecommend/doctorRecommend?currentTab=0">
            <view class="doctor-info-title">
                <image src="../../images/index_icon.png" /> 
                <view>推荐医院</view>
                <view class="recommend-tip">
                    <view>{{iTotalDisplayRecords}}</view>
                    <view wx:if="{{iTotalDisplayRecords}}">家</view>
                </view>
            </view>
        </navigator>
    </view>
</template>